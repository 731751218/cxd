.header .userinfo .getuser {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 99;
      opacity: 0;
}
.header .userinfo .avatarurl {
      width: 120rpx;
      height: 120rpx;
      margin-right: 20rpx;
      border-radius: 50%;
      overflow: hidden;
}
.header .userinfo .username {
      font-size: 38rpx;
      color: #fff;
}
